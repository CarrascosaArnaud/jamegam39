script/source = "extends Node

signal menu_game_over
signal update_score_hud

static var score = 0

# Called every frame. 'delta' is the elapsed time since the previous frame.
func _process(delta):
	update_score_hud.emit(score)

func game_over():
	$EnemyTimer.stop()
	menu_game_over.emit(score)
	get_tree().call_group(\"enemy\", \"queue_free\")

func new_game():
	get_child(0).hide()
	get_child(1).show()
	score = 0
	$Player.start($StartPosition.position)
	$EnemyTimer.start()

func _on_menu_start_game():
	new_game()

func _on_enemy_timer_timeout():
	var enemy_spawn_location = $EnemyPath/EnemyPathSpawn
	enemy_spawn_location.progress_ratio = randf()
	$EnemyBuilder.generate_random_enemy()


func _on_enemy_timer_end_game_timeout():
	$EnemyTimer.wait_time = 0.1
"

